@model ecommerceED1_2.Models.Farmacos
@{
    ViewBag.Title = "EditFarmacos";
}

<div class="container mt-4">
        <div class="col-sm-8">
            <h4 class="page-header">Editando farmaco <label class="alert alert-info"> @Model.nombreFarmaco</label></h4>
            <form role="form" method="post" action="/Home/EditFarmacos/@Model.id">
                <div class="form-group float-label-control">
                    <label>Existencia</label>
                    <input type="number" class="form-control form-control-md text-center" name="CantidadFarmaco" value="0" min="1" max="15">
                </div>


                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary btn btn-block" />
                </div>
            </form>
    </div>
</div>


